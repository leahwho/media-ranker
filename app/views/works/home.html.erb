<section class='spotlight'>
  <h2 class='spotlight-header'>
    <span class="spotlight__header--prefix">Media Spotlight:</span> <%= link_to @spotlight.title, work_path(@spotlight.id, class: "spotlight__link-to") %> </h2> <p class="spotlight__description">display the votes - <%= @spotlight.description %> </p>
</section>

<section class="top-ten__container">
  <section class='top-ten__header'>
    <h2 class="top-ten__header">Top Movies</h2>
      <ul class='list-group top_ten__list'>
        <% if @movies.empty? %>
          <li class="list-group-item">There are no movies in the ranking system!  Would you like to add one?</li>
        <% else %>
          <% @movies.each do |movie| %>
            <li class='list-group-item'>
              <h4><%= link_to movie.title, work_path(movie.id) %>
              <small class='top-ten__creator'>by <%= movie.creator %></small></h4>
              <p>How many votes will I get?</p>
          <% end %>
        <% end %>
      </ul>
  </section>    

