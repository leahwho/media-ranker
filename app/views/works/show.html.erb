<section class='show'>
  <h2><%= @work.title %></h2>
    <p> Created by: <%= @work.creator %></p>
    <p> Published: <%= @work.publication_year %></p>
    <p> <%= @work.description %></p>
  
  <section>
    <%= link_to 'Back to media ranks', works_path, class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_work_path(@work.id), class: "btn btn-primary" %>
    <%= link_to 'Upvote', work_votes_path(@work.id), class: "btn btn-primary", method: :post %>
    <%= link_to 'Delete This Thang', work_path(@work.id), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
  </section>


<section class='works-votes__container'>
  <h3 class='works-votes__header'><%= @work.votes.count %> votes for this <%= @work.category %> </h3>
  <table class='table'>
    
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    
    <% @work.votes.recent_work_votes(@work.id).each do |vote| %>
      <tr> 
        <td> <%= link_to vote.user.username, user_path(vote.user_id) %> </td>
        <td> <%= vote.created_at.strftime("%B %d, %Y") %> </td>
      </tr>
    <% end %>
    
  </table>
</section>

</section>