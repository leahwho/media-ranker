<section>
  <h2><%= @work.title %></h2>
    <p> Created by: <%= @work.creator %></p>
    <p> Published: <%= @work.publication_year %></p>
    <p> <%= @work.description %></p>
  
  <section>
    <%= link_to 'Back to media ranks', works_path, class: "btn btn-primary" %>
    <%= link_to 'Edit', edit_work_path(@work.id), class: "btn btn-primary" %>
    <a class: "btn btn-primary"> TODO link to upvote </a>
    <%= link_to 'Delete This Thang', work_path(@work.id), class: "btn btn-primary", method: :delete, data: {confirm: "Are you sure?"} %>
  </section>
</section>



<section class='works-votes__container'>
  <h3 class='works-votes__header'>How many votes does this <%= @work.category %> have?</h3>
  <table class='table'>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <tr> 
        <td>LINK_TO What user voted for this?</td>
        <td>When did they vote? </td>
      </tr>
    </tbody>
  </table>
</section>
  